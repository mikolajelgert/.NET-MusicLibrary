@page
@model MusicLibrary.Pages.Songs.CreateModel
@{
	ViewData["Title"] = "Add Song";
}

<div class="mylist-header-container">
	<h2>Add new song</h2>
	<form method="post">
		<div class="create-inputs-container">
			<h5>Song Details</h5>
			<div class="create-input-title">
				<label asp-for="Song.Title">Title</label>
				<input asp-for="Song.Title" type="text" class="form-control"/>
			</div>
			<div class="create-input-second-row">
				<div>
					<label asp-for="Song.Author">Author</label>
					<input asp-for="Song.Author" type="text" class="form-control" />
				</div>
				<div>
					<label asp-for="Song.Genre">Genre</label>
					<input asp-for="Song.Genre" type="text" class="form-control" />
				</div>
			</div>
			<div class="create-input-buttons">
				<button type="submit" class="btn btn-add-song">Add</button>
				<a asp-page="/mylist" class="btn btn-back-to-list">Back to list</a>
			</div>
		</div>
	</form>
</div>
